<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="background-ui" fx:id="borderPane" minHeight="350.0" minWidth="550.0"
            stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.gregorgott.guesser.GuesserGameController">
    <top>
        <HBox id="top-bar" alignment="CENTER_LEFT" spacing="20.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
            <Button id="cancel-button" focusTraversable="false" mnemonicParsing="false" onAction="#cancelRoundButton"
                    text="End round"/>
            <Label id="black-label" fx:id="currentPlayerLabel">
                <HBox.margin>
                    <Insets/>
                </HBox.margin>
            </Label>
            <Label id="black-label" fx:id="questionsCounterLabel"/>
        </HBox>
    </top>
    <right>
        <Button fx:id="nextButton" alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false"
                onAction="#buttonPushed" prefWidth="80.0" text="Next" BorderPane.alignment="BOTTOM_CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
        </Button>
    </right>
</BorderPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" id="background-ui" fx:id="borderPane" minHeight="350.0" minWidth="550.0"
            stylesheets="@stylesheet.css" xmlns="http://javafx.com/javafx/18"
            fx:controller="com.gregorgott.guesser.GuesserGameController">
    <top>
        <VBox id="top-bar" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets/>
            </BorderPane.margin>
            <ProgressBar id="top-bar-progress-bar" fx:id="roundProgressBar" maxWidth="1.7976931348623157E308"
                         prefHeight="3.0" progress="0.0"/>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                </padding>
                <Button id="cancel-button" focusTraversable="false" mnemonicParsing="false"
                        onAction="#cancelRoundButton" prefHeight="40.0">
                    <HBox.margin>
                        <Insets/>
                    </HBox.margin>
                    <graphic>
                        <ImageView fitHeight="85.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                            <Image url="@images/arrow_back.png"/>
                        </ImageView>
                    </graphic>
                </Button>
                <HBox>
                    <VBox id="player-bar" alignment="CENTER" prefHeight="40.0" style="-fx-background-radius: 5 0 0 5;">
                        <HBox alignment="CENTER" spacing="5.0">
                            <padding>
                                <Insets bottom="5.0" left="5.0" right="10.0" top="5.0"/>
                            </padding>
                            <VBox.margin>
                                <Insets/>
                            </VBox.margin>
                            <VBox alignment="CENTER">
                                <Label fx:id="player1Label" text="Player 1"/>
                                <Label fx:id="pointsPlayer1Label" alignment="TOP_LEFT" contentDisplay="TOP"/>
                            </VBox>
                            <Label text=":"/>
                            <VBox alignment="CENTER">
                                <Label fx:id="player2Label" text="Player 2"/>
                                <Label fx:id="pointsPlayer2Label" alignment="CENTER"/>
                            </VBox>
                        </HBox>
                    </VBox>
                    <VBox id="top-bar" alignment="CENTER" prefHeight="40.0"
                          style="-fx-background-radius: 0 5 5 0; -fx-background-color: rgba(255, 255, 255, 0.8)rgba(255, 255, 255, 0.8);">
                        <padding>
                            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                        </padding>
                        <Label text="Round"/>
                        <Label id="black-label" fx:id="questionsCounterLabel"/>
                    </VBox>
                </HBox>
            </HBox>
        </VBox>
    </top>
    <bottom>
        <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#nextButtonPushed"
                prefWidth="80.0" text="Next" BorderPane.alignment="BOTTOM_RIGHT">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </BorderPane.margin>
        </Button>
    </bottom>
</BorderPane>
